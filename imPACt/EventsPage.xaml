<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             Title="Edit Event"
             IconImageSource="baseline_list_alt_black_18dp.png"
             x:Class="imPACt.EventsPage">


    <ContentPage.Content>

        <StackLayout VerticalOptions="StartAndExpand" Margin="30,15,30,15" BackgroundColor="White">

            <Label Text="{Binding EventName}" HorizontalTextAlignment="Center" TextColor="Black"
            FontAttributes="Bold" FontSize="Large" Margin="10, 20" />
                   
            <BoxView FlexLayout.Basis="100%" HeightRequest="0" />

            <Label Text="Sponsor:" FontAttributes="Bold" FontSize="Medium" TextColor="Black"
                   Margin="10,20" HorizontalOptions="FillAndExpand" />

            <BoxView FlexLayout.Basis="100%" HeightRequest="0" />

            <Label Text="{Binding EventSponsor}" Margin="10,10" FontSize="Small" />

            <Label Text="Date:" FontAttributes="Bold" FontSize="Medium" TextColor="Black"
                   Margin="10,17" HorizontalOptions="FillAndExpand" />

            <BoxView FlexLayout.Basis="100%" HeightRequest="0" />

            <Label Text="{Binding EventDate}" Margin="10,10" FontSize="Small" />


            <BoxView FlexLayout.Basis="100%" HeightRequest="0" />
            
            <Label Text="Description:" FontAttributes="Bold" FontSize="Medium" TextColor="Black" 
                   Margin="10,18" HorizontalOptions="FillAndExpand" />

            <BoxView FlexLayout.Basis="100%" HeightRequest="0" />

            <Label Text="{Binding EventDescription}" Margin="10,10" FontSize="Small" />

            <Button Text="Update"  VerticalOptions="End" Clicked="UpdateButton" BackgroundColor="#3897F0"  TextColor="White" HeightRequest="50" WidthRequest="200"/>

        </StackLayout>


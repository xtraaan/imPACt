<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
			 x:Class="imPACt.SignUpPage"
			 Title="Sign Up"
             BackgroundColor="White">

    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness" iOS="10, 20, 10, 0" Android="10, 20, 10, 0" />
    </ContentPage.Padding>

    <ContentPage.Content BackgroundColor="White">
        <StackLayout VerticalOptions="StartAndExpand" Margin="20,0,20,0">

            
            <Label Text="Username" />
			<Entry x:Name="usernameEntry" Placeholder="username" />
			<Label Text="Password" />
			<Entry x:Name="passwordEntry" IsPassword="true" Placeholder="password"/>
            <Label Text="Re-Enter Password" />
            <Entry x:Name="RepasswordEntry" IsPassword="true" Placeholder="re-enter password"/>
            <Label Text="Email address" />
			<Entry x:Name="emailEntry" Placeholder="Email Address"/>
            <Button Text="Next" Clicked="OnSignUpButtonClicked" BackgroundColor="#3897F0" TextColor="White" />

            
            
            
			
		</StackLayout>
	</ContentPage.Content>
</ContentPage>